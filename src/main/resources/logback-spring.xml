<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Log directory -->
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="application"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- Current log file -->
        <file>${LOG_PATH}/${LOG_FILE}.log</file>

        <!-- Rolling policy: Time + Size -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- Time-based file name with index -->
            <fileNamePattern>
                ${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>

            <!-- Max file size per log file -->
            <maxFileSize>10MB</maxFileSize>

            <!-- Retention policy -->
            <maxHistory>30</maxHistory>

            <!-- Total size cap (optional but recommended) -->
            <totalSizeCap>1GB</totalSizeCap>

        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>

    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Package-specific logging (optional) -->
    <logger name="com.saturn.hospitalManagement" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

</configuration>